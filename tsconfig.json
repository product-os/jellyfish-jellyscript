{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "build",
    "esModuleInterop": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "declaration": true,
    "skipLibCheck": true
  },
  "typedocOptions": {
    "excludePrivate": true,
    "excludeProtected": true,
    "excludeExternals": true,
    "gitRevision": "master",
    "out": "docs"
  },
  "include": [
    "lib/**/*.ts",
    "@types/**/*.d.ts"
  ]
}
